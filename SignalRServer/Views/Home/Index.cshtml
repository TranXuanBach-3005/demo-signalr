﻿@{
    ViewData["Title"] = "Home Page";
}

<style>
    .control-group{
        padding: 10px 0;      
    }
    .col-md-4{
        padding: 0;
    }
    .col-md-8{
        padding: 0 40px;
    }
</style>

<div class="row" style="padding-top: 50px;">
    <div class="col-md-6">
        <div class="control-group row">
            <div class="col-md-4">
                <input type="text" id="broadcast" name="broadcast" placeholder="Message" />
            </div>
            <div class="col-md-8">
                <button id="btn-broadcast">Broadcast</button>
            </div>
        </div>
        <div class="control-group row">
            <div class="col-md-4">
                <input type="text" id="others-message" name="others-message"  placeholder="Message"/>
            </div>
            <div class="col-md-8 ">
                <button id="btn-others-message">Send to Others</button>
            </div>
        </div>
        <div class="control-group row">
            <div class="col-md-4">
                <input type="text" id="self-message" name="self-message" placeholder="Message" />
            </div>
            <div class="col-md-8 ">
                <button id="btn-self-message">Send to Self</button>
            </div>
        </div>
        <div class="control-group row">
            <div class="col-md-4">
                <div>
                    <input type="text" id="individual-message" name="individual-message" placeholder="Message" />
                </div>
                <div>
                    <input type="text" id="connection-for-message" name="connection-for-message" placeholder="User connection id:" />
                </div>
            </div>
            <div class="col-md-8 ">
                <button id="btn-individual-message">Send to Specific User</button>
            </div>
            
        </div>

        <div class="control-group row">
            <div class="col-md-4">
                <div>
                    <input type="text" id="group-message" name="group-message" placeholder="Message" />
                </div>
                <div>
                    <input type="text" id="group-for-message" name="group-for-message" placeholder="Group name" />
                </div>
            </div>
            <div class="col-md-8 ">
                <button id="btn-group-message">Send To Group</button>
            </div>
        </div>

        <div class="control-group row">
            <div class="col-md-4">
                <input type="text" id="group-to-add" name="group-to-add" placeholder="Group name" />
            </div>
            <div class="col-md-8 ">
                <button id="btn-group-add">Add User to Group</button>
            </div>
        </div>

        <div class="control-group row">
            <div class ="col-md-4">
                <input type="text" id="group-to-remove" name="group-to-remove" placeholder="Group name" />
            </div>
            <div class="col-md-8 ">
                <button id="btn-group-remove">Remove User from Group</button>
            </div>
        </div>

        <div class="control-group row">
            <div class="col-md-4">
                <input type="text" id="number-of-jobs" name="number-of-jobs" placeholder="Number of Jobs" />
            </div>
            <div class="col-md-8 ">
                <button id="btn-trigger-stream">Trigger Server Stream</button>
            </div>
        </div>

    </div>

    <div class="col-md-6">
        <p>SignalR Messages:</p>
        <pre id="signalr-message-panel"></pre>
    </div>



</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/site.js"></script>
